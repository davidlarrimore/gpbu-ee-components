<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>EE Recruit Flow Question Form</masterLabel>
    <description>Component to enable dynamic questions in the Recruit Flow</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>    
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="demoSetupId" label="Demo Setup Record Id" type="string" role="inputOnly"/>
            <property name="recruitQuestions" label="Recruit Questions" type="@salesforce/schema/Recruit_Question__c[]" role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>